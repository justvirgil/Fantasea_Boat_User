<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:text="From: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messageFromTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/TextView1"
            android:fontFamily="casual"
            android:text="From text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView1"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:text="To: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messageToTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/TextView3"
            android:fontFamily="casual"
            android:text="To text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView3"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:text="Subject: "
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/messageSubjectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageToTextView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/TextView2"
            android:fontFamily="casual"
            android:text="Subject Text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView2"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:text="Messages:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageSubjectTextView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/TextView6"
            android:ellipsize="end"
            android:fontFamily="casual"
            android:maxLines="1"
            android:text="Messages"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageTextView"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:text="Time sent:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeSentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageTextView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/TextView4"
            android:fontFamily="casual"
            android:text="Time Sent"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView4"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:text="Date Sent:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateSentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeSentTextView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/TextView5"
            android:fontFamily="casual"
            android:text="Date Sent"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>